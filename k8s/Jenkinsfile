pipeline {
    agent {
        label 'slave'
    }

    stages {
        stage('Deploy App') {
            steps {
                script {
                    sh """
                    kubectl apply -f /home/tata/Hands-on/go-lang/go-app/k8s/deployment.yml
                    kubectl apply -f /home/tata/Hands-on/go-lang/go-app/k8s/svc.yml 
                    """
                    sleep (time: 120, units: "SECONDS")
                }
            }
        }
        stage('sleep untill lb getting ready ') {
            steps {
                script {
                    sh """
                    kubectl get svc | grep LoadBalancer
                    kubectl describe svc go-app-svc | grep 'No Ingress'
                    kubectl describe mongo-db-svc | grep 'LoadBalancer Ingress'
                    """
                }
            }
        }
    }
}